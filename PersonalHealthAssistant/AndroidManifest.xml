<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mc.sensortag.personalhealthassistant"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service
            android:name="ti.android.ble.common.BluetoothLeService"
            android:enabled="true" />

        <activity
            android:name="com.mc.sensortag.personalhealthassistant.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mc.sensortag.personalhealthassistant.DeviceActivity"
            android:label="@string/title_activity_device" >
        </activity>
        
        <activity android:name="com.mc.sensortag.personalhealthassistant.DashboardActivity"></activity>
		<activity android:name="com.mc.sensortag.personalhealthassistant.RecommendationsActivity"></activity>     
		   
        <service android:enabled="true" android:name=".DeviceService"/>
    </application>

</manifest>
